<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>User signup</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>user.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Admin signup</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Layout head</servlet-name>
        <jsp-file>/layout/head.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Layout header</servlet-name>
        <jsp-file>/layout/header.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Layout footer</servlet-name>
        <jsp-file>/layout/footer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_process</servlet-name>
        <url-pattern>/login_go</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register_go</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User signup</servlet-name>
        <url-pattern>/user/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User login</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin login</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin signup</servlet-name>
        <url-pattern>/admin/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Layout head</servlet-name>
        <url-pattern>/head</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Layout header</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Layout footer</servlet-name>
        <url-pattern>/footer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/user/profile.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login_process</servlet-name>
        <servlet-class>user.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
